<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>NameLetterValidationRule</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX(  FirstName__c  ,&quot;^[a-z  A-Z]*$&quot;))</errorConditionFormula>
    <errorDisplayField>FirstName__c</errorDisplayField>
    <errorMessage>Only for charactors allows.</errorMessage>
</ValidationRule>
