<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Cancel_Movie_Reason</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISPICKVAL(Status__c , &quot;Canceled&quot;),
ISBLANK( Cancel_Change_Reason__c )
)</errorConditionFormula>
    <errorDisplayField>Cancel_Change_Reason__c</errorDisplayField>
    <errorMessage>Please enter a reason for  movie cancel.</errorMessage>
</ValidationRule>
